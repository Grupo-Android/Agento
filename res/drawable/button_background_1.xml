<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

<!-- FUNDO DOS BOTOES COM BORDA -->
    
	<!-- pressionado -->
	<item android:state_pressed="true" >
    	<shape>
        	<gradient
                android:startColor="@color/cinza_claro"
                android:endColor="@color/cinza_claro_mais_claro"
                android:angle="270" />
        	<!--<stroke
                android:width="0.5dp"
                android:color="@color/branco" /> -->
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
	</item>
	
	<!-- com foco -->
	<item android:state_focused="true" >
    	<shape>
            <gradient
                android:startColor="@color/cinza_claro"
                android:endColor="@color/cinza_claro_mais_claro"
                android:angle="270" />
            <!--<stroke
                android:width="0.5dp"
                android:color="@color/branco" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
	</item>
    
	<!-- padrao -->
    <item>        
        <shape>
            <gradient
                android:startColor="@color/cinza_escuro"
                android:endColor="@color/cinza_escuro_mais_claro"
                android:angle="270" />
            <!--  <stroke
                android:width="0.5dp"
                android:color="@color/branco" />-->
            <corners
                android:radius="1dp" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>